<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/conversations_item_layout"
    android:clickable="false"
    android:focusable="false"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person_black_50dp"
        android:id="@+id/conversations_item_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/conversations_item_text_view_conversation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conversation_name"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/conversations_item_text_view_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender:"
                android:textSize="13sp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/conversations_item_text_view_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample message ..."
                android:textSize="13sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/conversations_item_text_view_sent_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>